<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollViewHome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">
                <ViewFlipper
                    android:id="@+id/viewflipper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ViewFlipper>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="5dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <TableRow>
                        <ImageView
                            android:id="@+id/btnLunchBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/rice"
                            android:padding="15dp"/>

                        <ImageView
                            android:id="@+id/btnNoodle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/noodle_icon"
                            android:scaleType="fitCenter"
                            android:padding="15dp"/>

                        <ImageView
                            android:id="@+id/btnCake"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/snack_icon"
                            android:scaleType="fitCenter"
                            android:padding="15dp"/>
                        <ImageView
                            android:id="@+id/btnSweet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/cake"
                            android:scaleType="fitCenter"
                            android:padding="15dp"/>
                    </TableRow>
                    <TableRow>
                        <ImageView
                            android:id="@+id/btnDrink"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/milk_tea_icon"
                            android:scaleType="fitCenter"
                            android:padding="15dp"/>
                        <ImageView
                            android:id="@+id/btnBarbecue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/barbecue"
                            android:scaleType="fitCenter"
                            android:padding="15dp"/>
                        <ImageView
                            android:id="@+id/btnHotPot"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/hotpot"
                            android:scaleType="fitCenter"
                            android:padding="15dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white" />

                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

</ScrollView>