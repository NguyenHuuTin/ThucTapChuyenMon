<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ViewFlipper
                android:id="@+id/viewflipper"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </ViewFlipper>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <ImageButton
                        android:id="@+id/btnLunchBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/rice"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/btnNoodle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/noodle_icon"
                        android:scaleType="fitCenter"/>

                    <ImageButton
                        android:id="@+id/btnCake"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/snack_icon"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/btnSweet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/cake"
                        android:scaleType="fitCenter"/>
                </TableRow>
                <TableRow>
                    <ImageButton
                        android:id="@+id/btnDrink"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/drink"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/btnBarbecue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/barbecue"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/btnHotPot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/hotpot"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/white"
                        android:scaleType="fitCenter"/>

                </TableRow>
            </TableLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

</ScrollView>